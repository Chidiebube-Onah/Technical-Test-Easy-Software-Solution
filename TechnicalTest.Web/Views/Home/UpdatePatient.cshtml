@model TechnicalTest.Models.ViewModels.Patient.CreateOrUpdatePatientViewModel

@{
    ViewBag.Title = "Update Patient";
    Layout = "_Layout";
}

<h2>Update Patient</h2>

<form method="post" asp-action="UpdatePatient">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">

        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="Enter Fullname">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label asp-for="CardNo"></label>
        <input asp-for="CardNo" class="form-control" placeholder="Enter CardNo">
        <span asp-validation-for="CardNo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

