@model TechnicalTest.Models.ViewModels.Patient.CreateOrUpdatePatientViewModel

@{
    ViewBag.Title = "Add Patient";
    Layout = "_Layout";
    var title = Model?.Id is null or <= 0 ? "Add Patient" : $"Update Patient : {Model?.CardNo}";
    var btnName = Model?.Id is null or <= 0 ? "Submit" : "Update";

}

<h2>@title</h2>


<form method="post" asp-action="SavePatient">
    
   
    @if(ViewBag.ErrMsg is not null)
    {
     <p class="text-danger">@ViewBag.ErrMsg</p>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">

        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="Enter Fullname">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">

        <label asp-for="CardNo"></label>
        <input asp-for="CardNo" class="form-control" placeholder="Enter CardNo">
        <span asp-validation-for="CardNo" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id"/>

    <button type="submit" class="btn btn-primary">@btnName</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
